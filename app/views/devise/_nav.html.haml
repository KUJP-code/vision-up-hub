-# locals: ()

%nav.fixed.top-0.w-full.flex.items-center.gap-3.bg-main.h-16.text-white.font-bold.px-3.z-10
  = link_to root_path do
    %image{ height: '64px', width: '120px', src: org_favicon }
  .flex-grow
  = locale_toggle(classes: 'fill-white')
  - if controller_name != 'registrations'
    = link_to t('.sign_up'),
              new_registration_path(resource_name)
  - if controller_name != 'sessions'
    = link_to t('.sign_in'),
              new_session_path(resource_name)
