= render 'devise/nav'
= render 'shared/device_token_field'

%main.flex.justify-center.items-center.p-3
  %section{ class: 'flex h-4/5 w-full md:w-2/3 rounded bg-white overflow-y-scroll overflow-x-clip' }
    = form_for resource,
               as: resource_name,
               url: session_path(resource_name),
               html: { class: 'w-full md:w-1/2 flex flex-col items-center justify-between p-12' } do |f|
      = image_tag(asset_for_domain(:landing), class: 'w-4/5 md:w-3/5')

      .relative.w-full
        = f.label :email, class: 'absolute -top-3 left-3 bg-white px-2 font-bold text-lg'
        = f.email_field :email,
                        autofocus: true, autocomplete: 'email',
                        class: 'p-3 border-secondary w-full'

      .relative.w-full
        = f.label :password, class: 'absolute -top-3 left-3 bg-white px-2 font-bold text-lg'
        = f.password_field :password,
                           autocomplete: 'current-password',
                           class: 'p-3 border-secondary w-full'

      .form-check
        = f.check_box :remember_me
        = f.label :remember_me

      = f.submit t('.sign_in'),
                 class: 'btn btn-main text-xl'

      %small.text-center.underline.text-secondary-50
        = link_to t('.forgot_your_password'),
                  new_password_path(resource_name)

    = image_tag(asset_for_domain(:splash), alt: "Landing Image",
               class: 'hidden md:block rounded w-1/2 m-2 object-cover object-center')
