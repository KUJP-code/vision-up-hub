-# locals: (user:, orgs:)

= form_with model: [user.organisation, user],
            html: { class: 'form',
                    id: 'writer_form' } do |f|
  = render 'shared/form_errors', resource: @user

  = render 'users/fields', f:, orgs:

  %p this is a writer form

  .flex.gap-3
    = f.submit class: 'btn btn-main',
               id: 'submit_writer'
    - if policy(user).destroy? && !user.new_record?
      = link_to 'Delete',
                organisation_writer_path(user.organisation, user),
                data: { turbo_method: :delete,
                        turbo_confirm: 'Are you sure you want to delete this writer?' },
                class: 'btn btn-danger'
