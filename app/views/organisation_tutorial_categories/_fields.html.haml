-# locals: (f:, organisations:)

%div{ class: 'fields-wrapper flex flex-wrap items-center justify-center gap-5',
      data: { controller: 'fields',
              'new-record': f.object.new_record?.to_s } }

  %div{ class: 'form-group basis-1/3' }
    = f.label :organisation_id
    = f.collection_select :organisation_id,
                          organisations, :id, :name,
                          prompt: 'Select organisation',
                          required: true

  - if f.object.new_record?
    %button{ class: 'btn btn-danger basis-1/4 self-center',
             type: 'button',
             'data-action': 'fields#remove' } Remove
  - else
    .w-full.form-check.text-center
      = f.check_box :_destroy
      = f.label :_destroy, 'Remove'
