-# locals: (f:, lesson:, courses:)

:ruby
  p_resources = if current_user.is?('Admin')
    lesson.phonics_resources
  else
    lesson.phonics_resources.each { |pr| pr.id = nil }
  end

= content_for :priority_fields do
  = render 'lessons/shared/pdf_image_field',
           f:,
           lesson:,
           attr: :pdf_image

= render('lessons/shared/list_fields', f:, lesson:, attr: :materials)
= render('lessons/shared/list_fields', f:, lesson:, attr: :intro)

%div{ class: (lesson.galaxy? ? 'hidden' : nil),
      data: { phonics_level_target: 'nonGalaxyField' } }
  = render('lessons/shared/list_fields', f:, lesson:, attr: :instructions)

%div{ class: (lesson.galaxy? ? nil : 'hidden'),
      data: { phonics_level_target: 'galaxyField' } }
  = render('lessons/shared/list_fields', f:, lesson:, attr: :receptive_activity)
%div{ class: (lesson.galaxy? ? nil : 'hidden'),
      data: { phonics_level_target: 'galaxyField' } }
  = render('lessons/shared/list_fields', f:, lesson:, attr: :productive_activity)

= render('lessons/shared/list_fields', f:, lesson:, attr: :review)
= render('lessons/shared/list_fields', f:, lesson:, attr: :add_difficulty)
= render('lessons/shared/list_fields', f:, lesson:, attr: :extra_fun)

.flex.flex-col.gap-2{ 'data-controller': 'fields' }
  = f.fields_for :phonics_resources, p_resources do |pr_f|

    = render 'phonics_resources/fields',
            f: pr_f,
            resource: lesson,
            courses: courses,
            collection: @phonics_resources
  %template{ 'data-fields-target' => 'template' }
    = f.fields_for :phonics_resources,
                  lesson.phonics_resources.new,
                  child_index: 'CHILD' do |pr_f|
      = render 'phonics_resources/fields',
              f: pr_f,
              resource: lesson,
              courses: courses,
              collection: @phonics_resources

  %div{ 'data-fields-target' => 'target' }

  %button.btn.btn-secondary.w-full{ 'data-action' => 'fields#add' }
    = t('.add_phonics_resource')

