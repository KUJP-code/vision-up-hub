-# locals: (f:, lesson:)

:ruby
  term = lesson.term.presence || 1
  unit = lesson.unit.presence || 1
  lesson_topic = lesson.lesson_topic.presence || ''

.form-group
  = f.label :guide
  = f.file_field :guide, accept: 'application/pdf'

.flex.gap-2
  .form-group
    = f.label :term
    = f.number_field :term,
                     minimum: 1,
                     maximum: 3,
                     value: term,
                     required: true

  .form-group
    = f.label :unit
    = f.number_field :unit,
                     minimum: 1,
                     maximum: 20,
                     value: unit,
                     required: true

  .form-group
    = f.label :lesson_topic
    = f.text_field :lesson_topic,
                   value: lesson_topic,
                   required: true

- KindyPhonic::LISTABLE_ATTRIBUTES.each do |attr|
  = render('lessons/shared/list_fields', f:, lesson:, attr:)
