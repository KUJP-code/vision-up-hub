-# locals: (category:)

%button{ class: 'card flex flex-col items-center p-2 gap-2 h-full min-w-0',
         data: { action: 'dialog#open',
                 controller: 'dialog',
                 'dialog-dialog-value': 'tutorial-resources',
                 'dialog-frame-value': 'tutorials-frame',
                 'dialog-src-value': tutorial_category_path(category) },
         type: 'button' }
  %div.flex.items-center.justify-center
    -if category.cover_image.attached?
      = tutorial_image_tag(category, class: 'w-16 h-16 rounded', alt: 'Preview')
    - else
      = inline_svg_tag('tutorials.svg', class: 'w-16 h-16 rounded fill-current text-[#645880]')
  .grow
  %hr{ class: 'w-4/5 border border-secondary rounded -mb-1' }
  %h3.text-center.truncate= category.title
